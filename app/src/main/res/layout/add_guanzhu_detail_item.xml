<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/guanzhu_tubiao"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        tools:background="@drawable/tengxun" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/guanzhu_button"
        android:layout_toRightOf="@+id/guanzhu_tubiao"
        android:orientation="vertical">

        <TextView
            android:id="@+id/guanzhu_detail_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="bottom"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="冷笑话" />

        <TextView
            android:id="@+id/guanzhu_detail_number"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textSize="12sp"
            tools:text="222.2万关注" />
    </LinearLayout>

    <Button

        android:id="@+id/guanzhu_button"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="10sp"
        tools:text="关注" />

</RelativeLayout>
